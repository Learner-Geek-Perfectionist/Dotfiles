{
    // ======================= C/C++ 配置 =======================
    // Cursor 使用 anysphere.cpptools
    "[cpp]": {
        "editor.defaultFormatter": "anysphere.cpptools"
    },
    "[c]": {
        "editor.defaultFormatter": "anysphere.cpptools"
    },
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.loggingLevel": "Information",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-arm64",
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "C_Cpp.default.cppStandard": "gnu++23",
    "C_Cpp.default.cStandard": "gnu17",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    // 指定头文件包含路径
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/**"
    ],
    "C_Cpp.default.compileCommands": [],
    "shfmt.executablePath": "shfmt",
    // ======================= 编辑器设置 =======================
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.useTabStops": false,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "on",
    "editor.renderControlCharacters": true,
    "editor.guides.indentation": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    "workbench.editor.enablePreview": false,
    "files.exclude": {
        "**/node_modules": true,
        "**/build": false,
        "**/dist": true,
        "**/.git": true,
        "**/.vscode": false,
        "**/.vscode-server": true
    },
    // ======================= 终端设置 =======================
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "Maple Mono NF CN ExtraLight",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.cursorWidth": 1,
    "workbench.colorCustomizations": {
        "terminalCursor.foreground": "#4DEEEA"
    },
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.defaultProfile.linux": "smart-shell",
    "terminal.integrated.profiles.linux": {
        "smart-shell": {
            "path": "/bin/bash",
            "args": [
                "-l",
                "-c",
                "if command -v zsh >/dev/null 2>&1; then exec zsh -l; else exec bash -l; fi"
            ]
        },
        "zsh": {
            "path": "/usr/bin/zsh",
            "args": [
                "-l"
            ]
        }
    },
    // ======================= Python 设置 ======================= 
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    "git.ignoreRebaseWarning": true
}

