{
    "description": "Change spacebar to HyperKey if pressed with other keys, regular space if alone.",
    "manipulators": [
        {
            "from": {
                "key_code": "right_command",
                "modifiers": { "optional": ["any"] }
            },
            "to": [
                {
                    "key_code": "left_control",
                    "modifiers": ["left_command", "left_option", "left_shift"]
                }
            ],
            "to_if_alone": [{ "key_code": "right_option" }],
            "type": "basic"
        }
    ]
}