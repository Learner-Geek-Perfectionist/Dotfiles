{
    // =========================================================================
    // 远程服务器配置 (Remote Server Settings)
    // =========================================================================
    // 此文件仅包含应在远程服务器上生效的设置（编辑器行为、语言扩展等）
    // 
    // 以下设置需要配置在【本地电脑】的 Cursor settings.json 中：
    //   - terminal.integrated.*    (终端字体、大小、样式)
    //   - workbench.colorCustomizations (UI 颜色定制)
    //   - remote.SSH.defaultExtensions (SSH 连接时自动安装的扩展)
    // =========================================================================
    // ======================= C/C++ 配置 =======================
    "[cpp]": {
        "editor.defaultFormatter": "anysphere.cpptools"
    },
    "[c]": {
        "editor.defaultFormatter": "anysphere.cpptools"
    },
    "C_Cpp.intelliSenseEngine": "default",
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.loggingLevel": "Information",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.intelliSenseMode": "linux-gcc-arm64",
    "C_Cpp.default.compilerPath": "/usr/bin/g++",
    "C_Cpp.default.cppStandard": "gnu++23",
    "C_Cpp.default.cStandard": "gnu17",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/**"
    ],
    "C_Cpp.default.compileCommands": [],
    // ======================= 编辑器设置 =======================
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.useTabStops": false,
    "editor.formatOnSave": true,
    "editor.inlayHints.enabled": "on",
    "editor.renderControlCharacters": true,
    "editor.guides.indentation": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "editor.unicodeHighlight.allowedLocales": {
        "zh-hans": true
    },
    "workbench.editor.enablePreview": false,
    "files.exclude": {
        "**/node_modules": true,
        "**/build": false,
        "**/dist": true,
        "**/.git": true,
        "**/.vscode": false,
        "**/.vscode-server": true
    },
    // ======================= Python 设置 =======================
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    // ======================= 其他设置 =======================
    "shfmt.executablePath": "shfmt",
    "git.ignoreRebaseWarning": true
}