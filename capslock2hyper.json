{
    "title": "capslock2hyper",
    "rules": [
        {
            "description": "Caps Lock (held): ⌃⌥⇧⌘ (Hyper Key)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "modifiers": ["left_command", "left_option","shift"]
                        }
                    ],
                    "to_if_alone": {
                        "hold_down_milliseconds": 100,
                        "key_code": "spacebar"
                    },
                    "type": "basic"
                }
            ]
        }
    ]
}