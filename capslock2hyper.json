{
    "title": "space2hyper",
    "rules": [
        {
            "description": "Space (held): ⌃⌥⇧⌘ (Hyper Key)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": ["any"]
                        }
                    },
                    "to_if_held_down": [
                        {
                            "key_code": "left_control",
                            "modifiers": ["left_command", "left_option", "left_shift"]
                        }
                    ],
                    "to_if_alone": {
                        "key_code": "spacebar"
                    },
                    "parameters": {
                        "basic.to_if_held_down_threshold_milliseconds": 150, // 降低检测长按的时间阈值
                        "basic.to_delayed_action_delay_milliseconds": 50   // 减少执行动作的延迟
                    },
                    "type": "basic"
                }
            ]
        }
    ]
}